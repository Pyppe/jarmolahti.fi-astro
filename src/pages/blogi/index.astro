---
import { determineSlug } from '../../utils.ts'
import BaseLayout from '../../layouts/BaseLayout.astro'

interface MarkdownFrontmatter {
  date: number;
}

const title = 'Jarmo Lahti';
const description = 'Striimivaari';
const permalink = 'https://www.jarmolahti.fi/';

// Data Fetching: List all Markdown posts in the repo.

let allPosts = await Astro.fetchContent('./posts/*.md');
allPosts = allPosts.sort((a, b) => b.date - a.date);

console.log(allPosts[0])

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <!--
  <section class="intro">
    <h1 class="latest">{title}</h1>
    <p>{description}</p>
  </section>
  -->
  <section aria-label="Blog post list">
    {allPosts.map(post => {
      return (
        <article class="prose">
          <header>
            <!--<p>{post.date}</p>-->
            <a href={`/blogi/${determineSlug(post.file.pathname)}`}>{post.title}</a>
          </header>
        </article>
      )
    })}
  </section>
</BaseLayout>
